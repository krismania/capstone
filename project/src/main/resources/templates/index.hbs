<html>
    <head>
        <title>Car Share</title>
        <meta name="viewport" content="initial-scale=1.0">
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/main.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    </head>
    <body>
        <header>
            <h1>Rebu</h1>
        </header>
        <div id="map-wrapper">
            <div id="map"></div>
        </div>
        <form id="search-box">
            <input id="search-input" type="text" placeholder="Find a car near...">
            <button id="search-button"><i class="material-icons">search</i></button>
            <button id="geo-button"><i class="material-icons">my_location</i></button>
        </form>
        <script src="js/main.js" defer></script>
        <script src="https://maps.googleapis.com/maps/api/js?key={{mapsApiKey}}&callback=initMap" async defer></script>
    </body>
</html>
